{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"],
    "jsx": "preserve", // ✅ JSXを使うため必要
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true
  },
  "include": ["app", "components", "scripts", "types", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
